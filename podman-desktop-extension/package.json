{
  "name": "streams-console-podman-extension",
  "displayName": "streams for Apache Kafka console - Podman Extension",
  "description": "A Podman Desktop to embed the streams for Apache Kafka console in the UI",
  "version": "0.0.1",
  "icon": "icon.png",
  "publisher": "redhat",
  "license": "Apache-2.0",
  "engines": {
    "podman-desktop": "^1.4.0"
  },
  "main": "./dist/extension.js",
  "contributes": {
    "views": {
      "icons/containersList": [
        {
          "when": "io.streams-apache-kafka.console in containerLabelKeys",
          "icon": "${podman-icon}"
        }
      ],
      "icons/image": [
        {
          "when": "io.streams-apache-kafka.console in imageLabelKeys",
          "icon": "${podman-icon}"
        }
      ]
    }
  },
  "scripts": {
    "build": "vite build",
    "test": "vitest run --coverage",
    "test:watch": "vitest watch --coverage",
    "typecheck": "tsc --noEmit",
    "watch": "vite build -w",
    "lint:clean": "rimraf .eslintcache",
    "lint:check": "eslint --cache . --ext ts",
    "lint:fix": "eslint --cache . --fix --ext ts",
    "format:check": "prettier --check .eslintrc.json tsconfig.json package.json \"**/*.ts\"",
    "format:fix": "prettier --write .eslintrc.json tsconfig.json package.json \"**/*.ts\""
  },
  "dependencies": {
    "@podman-desktop/api": "1.10.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^18.17.9",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "copyfiles": "^2.4.1",
    "eslint": "^8.50.0",
    "eslint-import-resolver-custom-alias": "^1.3.2",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-etc": "^2.0.3",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-redundant-undefined": "^1.0.0",
    "eslint-plugin-sonarjs": "^0.21.0",
    "mkdirp": "^3.0.1",
    "prettier": "^3.0.3",
    "typescript": "^5.0.4",
    "vite": "^4.4.10"
  }
}
